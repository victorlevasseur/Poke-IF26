<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="girard_levasseur.utt.fr.poke_if26">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".PokeIF26App"
        android:allowBackup="true"
        android:icon="@mipmap/poke_if26_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/poke_if26_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.signup.SignUpActivity"
            android:label="@string/sign_up_activity_title"
            android:parentActivityName=".activities.login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="girard_levasseur.utt.fr.poke_if26.activities.login.LoginActivity" />
        </activity>
    </application>

</manifest>